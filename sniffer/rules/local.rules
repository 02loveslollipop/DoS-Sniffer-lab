# Snort 2.x Rules

# TCP SYN Flood Attempt
alert tcp $EXTERNAL_NET any -> $HOME_NET any (msg:"TCP SYN Flood Attempt"; flags:S; flow:stateless; detection_filter:track by_dst, count 70, seconds 10; sid:1000002; rev:1;)

# LAND Attack Detected
# Uses same_ip for Snort 2.x
alert ip $HOME_NET any -> $EXTERNAL_NET any (msg:"LAND Attack Detected"; sameip; sid:1000003; rev:1;)

# Teardrop Fragment Attack
alert ip $EXTERNAL_NET any -> $HOME_NET any (msg:"Teardrop Fragment Attack"; fragoffset:0; fragbits:M; dsize:<40; sid:1000004; rev:1;)